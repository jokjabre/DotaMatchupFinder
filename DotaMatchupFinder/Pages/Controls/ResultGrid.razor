@if (Items?.Count > 0)
{
    <h3>Matchups</h3>

    <MatTable Items="Items" class="mat-elevation-z5 d-table" AllowSelection="true">
        <MatTableHeader>
            <td>Match id</td>
            <td>Hero name</td>
            <td>Opponent name</td>
            <td>Victory</td>
        </MatTableHeader>
        <MatTableRow>
            <td>@context.MatchId</td>
            <td>@context.HeroName</td>
            <td>@context.OpponentName</td>
            <td>@context.Win</td>
        </MatTableRow>
    </MatTable>
}

@code {

    [Parameter]
    public List<BasicResultModel> Items { get; set; }

}